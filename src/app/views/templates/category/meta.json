{
    "name": {
        "name"      : "Category name",
        "type"      : "text",
        "default"   : "Category Name"
    },
    "tagline": {
        "name"      : "Category tagline",
        "type"      : "text",
        "default"   : "Tagline",
        "optional"  : true
    },
    "short_description": {
        "name"      : "Short description about category (not more than 3-4 words)",
        "type"      : "text",
        "optional"  : true
    },
    "long_description": {
        "name"      : "Description",
        "type"      : "longtext",
        "default"   : "Description of the Category"
    },
    "nav_icon"      : {
        "name"      : "Navbar Icon",
        "type"      : "type",
        "default"   : "icon-doc"
    },
    "og_image": {
        "name"      : "Image link to be displayed when page shared on fb (Only suffix, baseUrl already there)",
        "type"      : "text",
        "default"   : "files/16/logos/felicity16-logo-large.png",
        "optional"  : true
    },
    "events_data": {
        "name"      : "Events list",
        "type"      : "external",
        "path"      : ".*/.*",
        "template"  : "(category|event)",
        "data"      : {
            "name"          : "name",
            "start_time"    : "start_time",
            "tagline"       : "tagline",
            "icon"          : "nav_icon"
        }
    }
}
